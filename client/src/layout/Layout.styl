.layout
  width 100%
  height 100vh
  background #f2f2f2

  .background-layer
    background #f2f2f2
    width 100%
    height 100%
    z-index 1
    position absolute
    top 0
    left 0

  .content
    width 100%
    height 100%
    z-index 2
    position fixed
    overflow scroll

  > img
    height 100%
    width 100%
    object-fit cover
    position absolute
    z-index -1