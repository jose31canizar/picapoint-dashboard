time = 0.75s
easing = cubic-bezier(0.455, 0.03, 0.515, 0.955)
height = 91vh
.home
  width: 100vw
  height: height
  display: grid
  grid-template-columns: 50% 50%
  background: transparent
  @media all and (max-width: 800px)
    height: 100%
  transition: transform time, opacity time
  transition-timing-function: easing
  position: absolute
  // top: 0
  perspective: 500px
  perspective-origin: center
  justify-content: center
  align-items: center
  @media all and (max-width: 800px)
    flex-direction: column
  .logo
    position: absolute
    width: 100%
    height: 15%
    object-fit: contain
    filter: drop-shadow(0px 0px 7px black)
  .section-entrance
    transition: time easing
    @media all and (max-width: 800px)
      height: 50%
  img
    object-fit: cover
    z-index: -1
    filter: brightness(100%) contrast(100%)
    height: 250px
    transition: time easing
  .svg-icon
    padding: 40px 0
    background: white
    box-shadow: 0px 0px 25px 10px rgba(255,255,255,1)
    fill: none
    stroke: grey
    stroke-width: 20
    z-index: 2
    @media all and (max-width: 800px)
      padding: 40px
      box-shadow: none
      background: #927a7a
      stroke: white
  > span
    width: 50%
    margin: 0 auto
    display: flex
    justify-content: center
    align-items: center
    letter-spacing: 0.5em
    flex-direction: column
    @media all and (max-width: 800px)
      width: 100%
  > :nth-child(2)
  > :nth-child(4)
    transform: translate3d(0,0,0px) rotate3d(0,1,0,-20deg)
    transform-origin: bottom
    @media all and (max-width: 800px)
      margin: 10% 0
      border: none
  > :nth-child(3)
  > :nth-child(5)
    transform: translate3d(0,0,0px) rotate3d(0,1,0,20deg)
    transform-origin: bottom
    @media all and (max-width: 800px)
      margin: 10% 0
      border: none
  > span > .board-link
    display: flex
    width: 75%
    position: relative
    justify-content: center
    align-items: center
    cursor: pointer
    transition: time easing
    z-index: 3
    // :nth-child(1)
    //   transform: translate3d(0,10px,20px) rotate3d(0,1,0,90deg)
    //   transform-origin: bottom
    //   color: white
    // :nth-child(2)
    //   transform: translate3d(0,0,20px) rotate3d(0,1,0,40deg)
    //   transform-origin: bottom
    label
      font-size: 1.5em
      transition: 0.2s ease-in-out
      display: block
      position: absolute
      width: 50%
      text-align: center
      cursor: pointer
      color: white
  .board-link:hover :nth-child(1)
    transform: translate3d(0,0,20px) rotate3d(1,0,0,0deg)
  .board-link:hover :nth-child(2)
    // transform: translate3d(0,40px,20px) rotate3d(1,0,0,-180deg)
    color: #ff5c5c
  .board-link:hover > img
    filter: brightness(110%) contrast(20%)