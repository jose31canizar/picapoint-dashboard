.account section.auth.container
  position relative
  margin 5rem 0
  display inline

.account
  .account-profile
    display flex
    justify-content center
    align-items center

  .profile-picture-container
    width 5rem
    height 5rem
    border-radius 5rem
    background black
    margin-right 2rem
    position relative
    overflow hidden

    input[type=file]
      display none

    label
      width 5rem
      background #6969984f
      height 5rem
      display block
      position absolute
      border-radius 5rem
      top 0
      cursor pointer

    svg
      position absolute
      width 100%
      height 100%
      padding 1.5rem
      pointer-events none

      path
        fill white

  .profile-info
    flex 1