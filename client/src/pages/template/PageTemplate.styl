.page
  background transparent
  display flex
  flex-direction column
  justify-content center
  align-items flex-start
  z-index 4
  width 100%
  height 100vh
  overflow-x hidden
  overflow-y scroll
  transition transform 0.5s ease

  > div
    width 100%
    position absolute
    top 0
    height 100vh
    display flex
    justify-content center
    align-items center

    > div
      width 100%
      position fixed
      padding-top 25rem
      overflow scroll
      height 100vh
      display flex
      flex-direction column
      justify-content center
      align-items center
