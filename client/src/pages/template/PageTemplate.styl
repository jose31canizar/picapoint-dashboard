.page
  background transparent
  display flex
  flex-direction column
  justify-content center
  align-items flex-start
  z-index 4

  &:not(.home)
    padding 13rem 0 0

  position absolute
  width 100%
  height 100vh
  overflow-x hidden
  overflow-y scroll
  transition transform 0.5s ease

  section
    display grid
    grid-template-columns 60% 40%
    max-width 50rem

    @media all and (max-width: 800px)
      max-width 29rem

    margin 0 auto
    height 100%

    aside
      width 100%
      margin-left 50%

      @media all and (max-width: 800px)
        margin-left 20%

      .sidebar-menu
        position fixed
        border-left 1px solid #ec6602

        .smooth-scroll
          width 100%
          height 100%

          li
            cursor pointer
