
.article section
  margin 0 auto
  height 100%
  display grid
  grid-template-columns 60% 40%
  max-width 50rem

  @media all and (max-width: 1200px)
    max-width 34rem

  @media all and (max-width: 800px)
    max-width 29rem

  .markdown-image
    padding 5rem 0

  aside
    width 100%
    margin-left 50%

    @media all and (max-width: 800px)
      margin-left 20%

    .sidebar-menu
      position fixed
      border-left 1px solid #ec6602

      .smooth-scroll
        width 100%
        height 100%

        li
          cursor pointer
